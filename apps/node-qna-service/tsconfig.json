{
  "extends": "stackoverflow-config/tsconfig-server.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    ".turbo",
    "coverage",
    "dist",
    "src/**/__tests__",
    "src/**/__mocks__",
    "src/**/test-setup.ts"
  ]
}
